<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DuplicaFormula">


    <TextView
        android:text="Formula Originale -> "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textFRMoriginale" />

    <TextView
        android:text="Inserire Nuovo Nome Formula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textFRMoriginale"
        android:layout_marginTop="15dp"
        android:id="@+id/textNuovoNome" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:layout_below="@+id/textNuovoNome"
        android:layout_alignParentStart="true"

        android:id="@+id/EditNuovoNome"
        />


    <Button
        android:text="DUPLICA"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/EditNuovoNome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/buttonDuplica"
        android:onClick="Duplica"/>
    <Button
        android:text="ANNULLA"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/EditNuovoNome"
        android:layout_toRightOf="@+id/buttonDuplica"
        android:layout_marginTop="14dp"
        android:id="@+id/buttonAnnullaa"
        android:onClick="Annulla"/>

    <TextView
        android:text="-1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDuplica"
        android:layout_toStartOf="@+id/textView"
        android:visibility="invisible"
        android:id="@+id/IdFRM" />
    <TextView
        android:text="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDuplica"
        android:layout_toStartOf="@+id/IdFRM"
        android:visibility="invisible"
        android:id="@+id/textInvent" />




</RelativeLayout>