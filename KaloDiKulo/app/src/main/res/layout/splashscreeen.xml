<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grugno"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LabelLoading"
        android:text="LOADING..."
        android:textColor="@color/giallo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/ButContinua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pulsante_arrotondato"
        android:text="CONTINUA"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="LanciaMain"
        android:visibility="invisible"
        />
</RelativeLayout>